{
	"name": "draw",
	"displayName": "Draw",
	"description": "Draw an SVG image with a mouse or pen",
	"version": "0.1.4",
	"publisher": "hall",
	"icon": "docs/images/icon.png",
	"license": "Apache-2.0",
	"repository": {
		"url": "https://gitlab.com/hall/draw.git"
	},
	"bugs": {
		"url": "https://gitlab.com/hall/draw/issues"
	},
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"markdown",
		"asciidoc",
		"restructuredtext",
		"note",
		"draw",
		"latex",
		"OCR",
		"HTR",
		"svg"
	],
	"activationEvents": [
		"onCommand:draw.editCurrentLineAsSVG",
		"onCommand:draw.configureHDR",
		"onLanguage:markdown",
		"onLanguage:asciidoc",
		"onLanguage:restructuredtext"
	],
	"main": "./src/extension",
	"contributes": {
		"commands": [
			{
				"command": "draw.editCurrentLineAsSVG",
				"title": "Edit current line",
				"category": "Draw"
			},
			{
				"command": "draw.configureHDR",
				"title": "Configure HDR provider",
				"category": "Draw"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "draw.editCurrentLineAsSVG",
					"when": "editorFocus",
					"group": "7_modification"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Draw",
			"properties": {
				"draw.buttons": {
					"type": "array",
					"default": [],
					"description": "Add custom buttons to the toolbar",
					"items": {
						"type": "object",
						"properties": {
							"icon": {
								"type": "string",
								"description": "font awesome icon name"
							},
							"title": {
								"type": "string",
								"description": "button title, shown on hover"
							},
							"function": {
								"type": "string",
								"description": "javascript function to execute on button click"
							}
						},
						"required": [
							"icon",
							"title",
							"function"
						]
					}
				},
				"draw.directory": {
					"type": "string",
					"default": "",
					"description": "Save SVG to directory; write SVG inline if blank"
				}
			}
		}
	},
	"scripts": {},
	"dependencies": {
		"@root/walk": "^1.1.0",
		"cheerio": "^1.0.0-rc.10",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.47.0"
	}
}