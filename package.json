{
	"name": "draw",
	"displayName": "Draw",
	"description": "Draw an SVG image with a mouse or pen",
	"version": "0.1.10",
	"publisher": "hall",
	"icon": "docs/images/icon.png",
	"license": "Apache-2.0",
	"repository": {
		"url": "https://gitlab.com/hall/draw.git"
	},
	"bugs": {
		"url": "https://gitlab.com/hall/draw/issues"
	},
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"markdown",
		"asciidoc",
		"restructuredtext",
		"note",
		"draw",
		"latex",
		"OCR",
		"HTR",
		"svg"
	],
	"activationEvents": [
		"onWebviewPanel:drawPane",
		"onCommand:draw.editCurrentLineAsSVG",
		"onCommand:draw.configureHTR",
		"onLanguage:markdown",
		"onLanguage:asciidoc",
		"onLanguage:restructuredtext"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"command": "draw.editCurrentLineAsSVG",
				"title": "Edit current line",
				"category": "Draw",
				"icon": "$(pencil)"
			},
			{
				"command": "draw.configureHTR",
				"title": "Configure HTR provider",
				"category": "Draw"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "draw.editCurrentLineAsSVG",
					"when": "editorFocus",
					"group": "7_modification"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Draw",
			"properties": {
				"draw.buttons": {
					"type": "array",
					"default": [],
					"markdownDescription": "Add [custom buttons](https://gitlab.com/hall/draw#custom-buttons) to the toolbar",
					"items": {
						"type": "object",
						"additionalProperties": false,
						"properties": {
							"icon": {
								"type": "string",
								"description": "font awesome icon name"
							},
							"title": {
								"type": "string",
								"description": "button title, shown on hover"
							},
							"function": {
								"type": "string",
								"description": "javascript function to execute on button click"
							}
						},
						"required": [
							"icon",
							"title",
							"function"
						]
					}
				},
				"draw.directory": {
					"type": "string",
					"default": "",
					"description": "Save to directory (write inline if blank)"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/run.js"
	},
	"dependencies": {
		"@vscode/webview-ui-toolkit": "^1.0.0",
		"cheerio": "^1.0.0-rc.10",
		"iink-js": "^1.5.4",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "^12.12.0",
		"@types/uuid": "^8.3.4",
		"@types/vscode": "^1.53.0",
		"@typescript-eslint/eslint-plugin": "^5.25.0",
		"@typescript-eslint/parser": "^5.25.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.16.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-n": "^15.2.0",
		"eslint-plugin-promise": "^6.0.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"source-map-support": "^0.5.21",
		"typescript": "^4.6.4"
	}
}