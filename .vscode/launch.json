{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--disable-extensions"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "npm: watch",
        },
        {
            "name": "Test",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "args": [
                "run",
                "test",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}